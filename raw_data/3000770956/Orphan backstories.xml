<Defs>


<!-- war orphan -->
<ZCB.ZCBackstoryDef>
		<defName>ZCB_WarOrphan</defName>
		<title>war orphan</title>
		<titleShort>orphan</titleShort>
		<baseDesc>After losing both parents, [PAWN_nameDef] was frequently forced defend [PAWN_objective]self. [PAWN_pronoun] withdrew from society, finding solace in art.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 					
			<li>ZCB_NaturalMeditation</li> 					
		</spawnCategories>
		
		<commonality>10</commonality>
		<father>Dead</father>
		<mother>Dead</mother>

		<requiredRecords>
			<li>
				<name>TimeDrafted</name>
				<minValue>30000</minValue>			<!-- half a day -->
			</li>
		</requiredRecords>	

		<skillGains>
			<li>
				<key>Shooting</key>
				<value>2</value>
			</li>
			<li>
				<key>Melee</key>
				<value>4</value>
			</li>
			<li>
				<key>Artistic</key>
				<value>3</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>1</value>
			</li>
		</skillGains>
		<workDisables>
			<li>Social</li>
			<li>Animals</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>


