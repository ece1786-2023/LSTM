<?xml version="1.0" encoding="utf-8"?>
<Defs>

<!-- child warrior -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_ChildWarrior</defName>
		<title>child warrior</title>
		<titleShort>warrior</titleShort>
		<baseDesc>[PAWN_nameDef] was exposed to the harsh realities of battle at a young age. 
\n[PAWN_pronoun] is skilled in combat, but the trauma has stunted [PAWN_possessive] social skills.</baseDesc>
		<slot>Childhood</slot>
		<maxTechLevel>Neolithic</maxTechLevel>
		<spawnCategories>
			<li>ZCB</li> 							<!-- required -->
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		<commonality>3</commonality>
		<requiredRecords>
			<li>
				<name>KillsHumanlikes</name>
				<minValue>2</minValue>
			</li>
			<li>
				<name>PrisonersChatted</name>
				<maxValue>5</maxValue>
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Shooting</key>
				<value>2</value>
			</li>
			<li>
				<key>Melee</key>
				<value>3</value>
			</li>
			<li>
				<key>Social</key>
				<value>-4</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>


<!-- child archer -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_ChildArcher</defName>
		<title>archer</title>
		<titleShort>sniper</titleShort>
		<baseDesc>[PAWN_nameDef] grew up practicing with bows and other ranged weapons.</baseDesc>
		<slot>Childhood</slot>
		<maxTechLevel>Neolithic</maxTechLevel>
		<spawnCategories>
			<li>ZCB</li> 							
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		<requiredRecords>
			<li>
				<name>ShotsFired</name>
				<minValue>100</minValue>
			</li>
		</requiredRecords>
		<requiredSkills>
			<li>
				<name>Shooting</name>
				<minValue>7</minValue>
			</li>
		</requiredSkills>
		<disallowedTraits>
			<ShootingAccuracy>-1</ShootingAccuracy>
		</disallowedTraits>
		<skillGains>
			<li>
				<key>Shooting</key>
				<value>7</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>


<!-- child warrior 2 -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_ChildWarrior2</defName>
		<title>child warrior</title>
		<titleShort>soldier</titleShort>
		<baseDesc>[PAWN_nameDef] grew up on the battlefield, defending his tribe and vanquishing their enemies. All [PAWN_pronoun] knows is combat.</baseDesc>
		<slot>Childhood</slot>
		<maxTechLevel>Neolithic</maxTechLevel>
		<spawnCategories>
			<li>ZCB</li> 							
			<li>ZCB_NaturalMeditation</li> 			<!-- enables natural meditation focus -->
		</spawnCategories>
		<commonality>5</commonality>
		<requiredRecords>
			<li>
				<name>KillsHumanlikes</name>
				<minValue>10</minValue>
			</li>
			<li>
				<name>ShotsFired</name>
				<minValue>50</minValue>
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Melee</key>
				<value>3</value>
			</li>
			<li>
				<key>Shooting</key>
				<value>5</value>
			</li>
		</skillGains>
		<workDisables>
			<li>PlantWork</li>
			<li>Artistic</li>
		</workDisables>
	</ZCB.ZCBackstoryDef>

</Defs>