<?xml version="1.0" encoding="utf-8"?>
<Defs>


<!-- food thief -->
	<ZCB.ZCBackstoryDef parentName="ZCB_TribalChild">
		<defName>ZCB_FoodThief</defName>
		<title>food thief</title>
		<titleShort>thief</titleShort>
		<baseDesc>[PAWN_nameDef] loved to eat, often getting into trouble for stealing more of [PAWN_possessive] share of the tribe's food. As punishment [PAWN_pronoun] was put to work in the kitchens, where [PAWN_pronoun] learned to love the art of cooking.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
			<li>ZCB_NaturalMeditation</li>
		</spawnCategories>
		<commonality>3.5</commonality>
		<maxTechLevel>Neolithic</maxTechLevel>	
		<requiredTraits>
			 <Gourmand>0</Gourmand>
		</requiredTraits>
		<requiredPassions>
			<li>Cooking</li>
		</requiredPassions>
		<requiredRecords>
			<li>
				<name>MealsCooked</name>
				<minValue>50</minValue>
			</li>
		</requiredRecords>
		<skillGains>
			<li>
				<key>Cooking</key>
				<value>7</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>
	
	
<!-- Ascetic -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_Ascetic</defName>
		<title>ascetic child</title>
		<titleShort>ascetic</titleShort>
		<baseDesc>[PAWN_nameDef] was never interested in furniture with ostantatious filigree or fancy, gluttonous meals. However, [PAWN_pronoun] could still appreciate good craftsmanship when it counted.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
			<li>ZCB_NaturalMeditation</li>
		</spawnCategories>
		<commonality>2</commonality>
		<maxTechLevel>Neolithic</maxTechLevel>	
		<requiredTraits>
			 <Ascetic>0</Ascetic>
		</requiredTraits>
		<skillGains>
			<li>
				<key>Artistic</key>
				<value>-5</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>3</value>
			</li>
			<li>
				<key>Cooking</key>
				<value>-2</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>
	
	
<!-- Brawler -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_TribalBrawler</defName>
		<title>brawler</title>
		<titleShort>brawler</titleShort>
		<baseDesc>[PAWN_nameDef] was good in a fight, always training to be stronger. [PAWN_pronoun] learned to shrug off hits that would have a lesser fighter on the ground.\n\Adds trait: Tough</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
			<li>ZCB_NaturalMeditation</li>
		</spawnCategories>
		<commonality>2</commonality>
		<maxTechLevel>Neolithic</maxTechLevel>	
		<requiredRecords>
			<li>
				<name>DamageDealt</name>
				<minValue>40</minValue>
			</li>
			<li>
				<name>DamageTaken</name>
				<minValue>20</minValue>
			</li>
		</requiredRecords>
		<requiredTraits>
			<Brawler>0</Brawler>
		</requiredTraits>
		<forcedTraits>
			<Tough>0</Tough>
		</forcedTraits>
		<skillGains>
			<li>
				<key>Melee</key>
				<value>5</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>
	


<!-- Fast learner -->
	<ZCB.ZCBackstoryDef>
		<defName>ZCB_Scavenger</defName>
		<title>scavenger</title>
		<titleShort>scavenger</titleShort>
		<baseDesc>[PAWN_nameDef] spent [PAWN_possessive] childhood learning as much as [PAWN_pronoun] could about everything, making [PAWN_objective] a bit eccentric to the rest of [PAWN_possessive] tribe. [PAWN_pronoun] was especially interested in disassembling old mechs to see how they are made, with the hope of advancing technology for [PAWN_possessive] tribe.</baseDesc>
		<slot>Childhood</slot>
		<spawnCategories>
			<li>ZCB</li> 
			<li>ZCB_NaturalMeditation</li>
		</spawnCategories>
		<commonality>2</commonality>
		<maxTechLevel>Neolithic</maxTechLevel>	
		<requiredTraits>
			<FastLearner>0</FastLearner>
		</requiredTraits>
		<skillGains>
			<li>
				<key>Intellectual</key>
				<value>4</value>
			</li>
			<li>
				<key>Crafting</key>
				<value>2</value>
			</li>
			<li>
				<key>Social</key>
				<value>-2</value>
			</li>
		</skillGains>
	</ZCB.ZCBackstoryDef>
	
	
